<% if @posts.present? %>

    <div class="row main-index">

        <% @posts.each do |post| %>

            <div class="col-md-4">
                <div class="well">
                    <h3><%= post.title %></h3>
                    <p>
                        <img src="<%= post.image %>" alt="<%= post.title %>" class="img-responsive image-index">
                    </p>

                    <p>
                        <span class="pull-left"><%= post.author.name %></span>
                        <span class="pull-right"><%= post.display_created_at %></span>
                        <span class="clearfix"></span>
                    </p>

                    <p><%= truncate(post.description, length: 100) %></p>

                    <p>
                        <%= link_to "Read", post_path(post), class: 'btn btn-primary' %>
                    </p>

                </div>
            </div>

        <% end %>

    </div>
<% end %>
