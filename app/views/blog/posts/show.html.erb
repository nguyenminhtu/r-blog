<% provide(:page_title, "#{@post.title}") %>

<div class="text-center">
    <h2><%= @post.title %></h2>

    <p>
        <img src="<%= @post.image %>" alt="<%= @post.title %>" class="img-responsive" style="height: 400px; width: 100%;">
    </p>

    <p><%= @post.description %></p>
    <p><%= @post.body %></p>
</div>
