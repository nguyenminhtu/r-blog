<% provide(:page_title, "#{@post.title}") %>

<div class="text-center">
    <p class="pull-left" style="margin-top: 10px;">
        <%= link_to "Back", root_path, class: 'btn btn-info' %>
    </p>
    <div class="clearfix"></div>

    <h2>
        <%= @post.title %>
    </h2>

    <p>
        <img src="<%= @post.image %>" alt="<%= @post.title %>" class="img-responsive" style="height: 400px; width: 100%;">
    </p>

    <p>
        <span class="pull-left">
            <strong><%= @post.author.name %></strong>
        </span>

        <span class="pull-right">
            <small><i><%= @post.display_created_at %></i></small>
        </span>

        <span class="clearfix"></span>
    </p>

    <p><%= @post.description %></p>
    <p><%= raw @post.body %></p>
</div>

<div class="row">

<hr><br>

    <%= form_for([@post, @comment]) do |f| %>

        <div class="form-group">
            <%= f.text_field :content, class: 'form-control', rows: 4, placeholder: "Comment here..." %>
        </div>

        <div class="form-group">
            <%= f.submit("Post", class: 'btn btn-primary') %>
        </div>

    <% end %>

<hr>

</div>

<div class="row">

    <% if @comments.count > 0 %>

        <%= render @comments %>

        <div class="text-center" style="margin-top: 40px;">
            <%= will_paginate @comments, renderer: BootstrapPagination::Rails %>
        </div>

    <% else %>

        <h4>This post has no comment !</h4>

    <% end %>


</div>
