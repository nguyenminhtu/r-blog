<% provide(:page_title, "Update Account") %>

<br>

<div class="row">
    <div class="col-md-6">

        <h2 class="title">Change Avatar</h2>
        <hr>

        <%= form_for @author, :url => authors_my_account_avatar_path, method: :put, :html => { :multipart => true } do |f|%>

            <%#= fields_for :author do |f| %>

                <div class="form-group">
                    <img src="<%= current_author.gravatar_image_url %>" alt="" class="img-circle img-responsive">
                </div>

                <div class="form-group">
                    <%= f.label :avatar %>
                    <%= f.file_field :avatar, class: 'form-control', required: true %>
                </div>

                <div class="form-group">
                    <%= f.submit("Update avatar", class: 'btn btn-success') %>
                </div>

            <% #end %>

        <% end %>

        <br>
        <hr>
        <br>


        <h2 class="title">Update Info</h2>
        <hr>

        <%= form_tag authors_my_account_info_path, method: :put do %>

            <%= fields_for :author do |f| %>

                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, value: current_author.name, autofocus: true, required: true, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :email %>
                    <%= f.text_field :email, value: current_author.email, disabled: true, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.submit("Update info", class: 'btn btn-info') %>
                </div>

            <% end %>

        <% end %>

    </div>

    <div class="col-md-6">

        <h2 class="title">Change Password</h2>
        <hr>

        <%= form_tag authors_my_account_password_path, method: :put do %>

            <%= fields_for :author do |f| %>

                <div class="form-group">
                    <%= f.label :current_password %>
                    <%= f.password_field :current_password,required: true, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :password %>
                    <%= f.password_field :password,required: true, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :password_confirmation %>
                    <%= f.password_field :password_confirmation,required: true, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.submit("Update password", class: 'btn btn-warning') %>
                </div>

            <% end %>

        <% end %>

    </div>
</div>
